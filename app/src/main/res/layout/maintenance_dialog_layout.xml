<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <Spinner
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        />
    <RadioGroup
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup"
        android:contentDescription="性别"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/radioMale"
               android:text="已解决"
               android:checked="true">
           </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioFemale"
                android:text="未解决">
            </RadioButton>
        </RadioGroup>

    <EditText
        android:layout_below="@id/radioGroup"
        android:id="@+id/ev_info"
        android:layout_width="match_parent"
        android:background="#d7d7d7"
        android:layout_height="165dp"
        android:maxEms="100"
        android:layout_margin="15dp"/>

    <RelativeLayout
        android:layout_below="@id/ev_info"
        android:id="@+id/ic_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:id="@+id/pic2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_select_pic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="＋"
                android:textColor="@color/title_text_color"
                android:textSize="36sp" />
            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@drawable/kong_mrjz"
                android:id="@+id/iv_exce_pic2"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_select_pic2"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/del2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="删除"
                android:textColor="@color/title_text_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pic3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_select_pic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="＋"
                android:textColor="@color/title_text_color"
                android:textSize="36sp" />
            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@drawable/kong_mrjz"
                android:id="@+id/iv_exce_pic3"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_select_pic3"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/del3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="删除"
                android:textColor="@color/title_text_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pic1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_select_pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="＋"
                android:textColor="@color/title_text_color"
                android:textSize="36sp" />
            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@drawable/kong_mrjz"
                android:id="@+id/iv_exce_pic1"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_select_pic1"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/del1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="删除"
                android:textColor="@color/title_text_color"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <Spinner
        android:layout_below="@id/ic_layout"
        android:id="@+id/type_spinner"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />


    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_below="@id/type_spinner"
        android:id="@+id/btn_la"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/submit"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:layout_centerVertical="true"
            android:layout_marginRight="75dp"
            android:background="@color/actionsheet_blue"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cancel"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            android:text="取消"
            android:layout_centerVertical="true"
            android:background="@color/actionsheet_blue"
            android:layout_marginLeft="75dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>
