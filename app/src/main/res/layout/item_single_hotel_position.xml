<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/title_bg"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_box_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="V1 B987654321 V1机顶盒"
             />

        <ImageView
            android:visibility="gone"
            android:id="@+id/tv_box_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cirlce_red" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_last_operation"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="最后操作状态："
        />
    <TextView
        android:id="@+id/tv_last_optime"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="最后操作时间："
        />
    <TextView
        android:id="@+id/tv_location"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="最后操作位置："
        />
    <RelativeLayout
        android:background="@color/title_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textColor="@drawable/init_color_selector"
            android:background="@drawable/sign_button_selector"
            android:id="@+id/btn_fix"
            android:text="报修"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <Button
            android:layout_alignParentRight="true"
            android:textColor="@drawable/init_color_selector"
            android:background="@drawable/sign_button_selector"
            android:id="@+id/btn_sign"
            android:text="签到"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp" />
    </RelativeLayout>
